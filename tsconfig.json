{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "baseUrl": ".",
        "paths": {
            "@components/*": ["components/*"],
            "@utils/*": ["utils/*"],
            "@lib/*": ["lib/*"],
            "@services/*": ["services/*"],
            "@api/*": ["pages/api/*"],
            "@store/*": ["store/*"],
            "@hooks/*": ["hooks/*"],
            "@constant/*": ["constant/*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"]
}
