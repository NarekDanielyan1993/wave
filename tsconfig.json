{
    "compilerOptions": {
        "target": "ES2022",
        "verbatimModuleSyntax": false,
        "lib": ["ES2022", "DOM"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "module": "CommonJS",
        "noUncheckedIndexedAccess": true,
        "moduleDetection": "force",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "baseUrl": ".",
        "paths": {
            "@components/*": ["components/*"],
            "@utils/*": ["utils/*"],
            "@lib/*": ["lib/*"],
            "@services/*": ["services/*"],
            "@api/*": ["pages/api/*"],
            "@store/*": ["store/*"],
            "@hooks/*": ["hooks/*"],
            "@constant/*": ["constant/*"],
            "@styles/*": ["globals/*"]
        }
    },
    "allowImportingTsExtensions": true,
    /* Linting */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "next.config.js",
        "types/common"
    ],
    "exclude": ["node_modules"]
}
